<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_ingredients"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:src="@drawable/nestle_cream"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/txt_ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_ingredients"
                android:text="NESTLE PURPOSE CREAM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8b0000"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>