<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_ingredients"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:src="@drawable/nestle_cream"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/txt_ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_ingredients"
                android:text="NESTLE PURPOSE CREAM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#8b0000"
                />

            <View
                android:id="@+id/ingredients_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_ingredients"
                android:layout_below="@id/txt_ingredients_title"/>


            <TextView
                android:id="@+id/txt_ingredients_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_ingredients"
                android:layout_below="@id/ingredients_view"
                android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used as a placeholder before final copy is available."
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>